<!DOCTYPE html>
<html lang="zh-CN">
<head>
    #parse("/common/head-meta.vm")
    <title>东莞招聘</title>
    #parse("/common/head-js+css.vm")
	<style>
    .table tbody a{color:#0057b0;}
    .table tbody a:hover{text-decoration:underline;color:#FF3333;}
    </style>
	<script type="text/javascript">
		$(document).ready(function () {  
			initThemeData();
			queryData();
			
			$("#checkAll").click(function(){
				if($(this).is(":checked")){
					$("input[name='chk']:enabled").prop("checked", true);
				}else{
					$("input[name='chk']:enabled").prop("checked", false);
				}
			});
			
			$(document).on("click","input[name='chk']:enabled",function(){
				if($("input[name='chk']:enabled:checked").length == $("input[name='chk']:enabled").length){
					$("#checkAll").prop("checked", true);
				}else{
					$("#checkAll").prop("checked", false);
				}
    	    });
        });
		
		function queryData() {
			operBtn();
			$("#checkAll").prop("checked", false);
			var $serializeForm=$("#list_form").serialize();
			$.ajax({
                type: "POST",
                dataType: "json",
                url: '${link.contextPath}/dg/planApply/selectAllAuditInterviewPass',
                data : $serializeForm,
                success: function (data) {
                    if (data) {  
                        /*获取数据总行数*/
        	            $("#totalCounts").val(data.total);
						$("#currentPage").val(data.currentPage);
                        /*如果后台筛选出的结果为0，则修改结果为1，否则生成分页标签页数会保持在筛选之前的状态*/  
                        if (parseInt($("#totalCounts").val()) == 0) {  
                        	$("#totalCounts").val(1);
                        }
						if(parseInt($("#currentPage").val()) == 0) {  
                        	$("#currentPage").val(1);
                        }
                        /*生成表和套用css样式*/  
                        data = data.rows;//获取筛选后的内容 
                        $(".table tbody tr").remove();//清空列表 
                        $.each(data, function (index, e) {
							var sex="";
							switch(e.sex){
								case "1" : sex="男";break;
								case "2" : sex="女";break;
							}
							var statustext=e.statustext;
							if(getLength(statustext) > 30){
								statustext=substr(statustext,30);
							}
							var insertHtml='<tr ondblclick="autid(\''+e.id+'\',\''+e.employItemsId+'\');">';
                                    insertHtml+='<td><label><input type="checkbox" value="'+e.id+'" name="chk"/></label></td>';
									insertHtml+='<td>'+e.name+'</td>';
									insertHtml+='<td><a onclick="viewProgress(\''+e.id+'\',\''+e.employItemsId+'\');" href="javascript:void(0);" title="查看进度">查看进度</a></td>';
									insertHtml+='<td>'+sex+'</td>';
									insertHtml+='<td>'+e.identityCard+'</td>';
                              		insertHtml+='<td>'+e.postName+'</td>';
									insertHtml+='<td title="'+e.statustext+'">'+statustext+'</td>';
									insertHtml+='<td><a class="btn btn-primary" onclick="autid(\''+e.id+'\',\''+e.employItemsId+'\');" href="javascript:void(0);" title="审核">审核</a></td>';
									insertHtml+='</tr>';
							$(".table tbody").append(insertHtml);//将返回的数据追加到表格
                        });
                        /*生成分页标签*/
                        paginator(parseInt($("#currentPage").val()), parseInt($("#pageSize").val()), parseInt($("#totalCounts").val()));  
                    }
                }
            }); 
        }
		
		function paginator(pageIndex, pageSize, totalCount) {
        	$.jqPaginator('#pagination', {
        		totalCounts: totalCount,
        		pageSize: pageSize,
        	    currentPage: pageIndex,
        	    visiblePages: 7,
        		first:'<a class="first">首页</a>',
        	    prev: '<a class="prev">上一页</a>',
        	    next: '<a class="next">下一页</a>',
        		last: '<a class="last：">末页</a>',
        	    page: '<a class="page">{{page}}</a>',
        	    onPageChange: function (num, type) {
        	    	if (type === 'change' && num !== parseInt($("#currentPage").val())) {  
                        $("#currentPage").val(num);//点击改变页码时，同步model中的页码  
                        queryData();//重新生成新表
                    }
        	    }
        	});
        }
				
		function initThemeData(){
			var year=$("#year").val();
			if(year){
    			$("#projectId").html("");
				$.ajax({
        			url : '${link.contextPath}/dg/information/getThemes',
        			type : 'post',
        			data:{"year":year},
        			async: false,
        			cache : false,
        			dataType : 'json',
        			success : function(data) {
        				if(data.length){
							var insertHtml="";
							$.each(data,function(index,e){
								var themeTitle=e.theme;
    							if(getLength(themeTitle) > 12){
    								themeTitle=substr(themeTitle,12);
    							}
								insertHtml+='<option value="'+e.id+'" title="'+e.theme+'">'+themeTitle+'</option>';
							});
							$("#projectId").append(insertHtml);
						}else{
							$("#projectId").append('<option value="">--请选择--</option>');
						}
    				}
        		});
			}else{
				$("#projectId").append('<option value="">--请选择--</option>');
			}
		}
		
		function autid(id,projectId){
			window.location.href="${link.contextPath}/dg/planApply/register?recruitId="+projectId+"&studentId="+id+"&flag=1";
		}
		
		function reason(){
			layer.open({
            	type: 2,
            	title:['招聘单位审核原因维护', 'font-weight:600'],
				content:['${link.contextPath}/dg/auditReason/reasonList','yes'],
				btn:['取消'],
            	shadeClose:false,
            	fix:true,
            	area: ['650px','550px'],
            	maxWidth:474,
            	move: false,
            	yes: function(index, layero){
            		layer.close(index);
				},
				end: function(){
        			window.location.reload();
    		    }
            });
		}
		
		function checkCancel(){
			var projectId=$("#projectId").val();
			var $chk=$("input[name='chk']:enabled:checked");
			var $chkSerialize=$chk.serialize();
			if(!$chk.size()){
				layer.msg("请选择记录操作！", {icon: 2});	
				return;			
			}
			if(!projectId){
				layer.msg("招聘主题ID为空，请稍后再试！", {icon: 2});	
				return;	
			}
			layer.confirm('您确定要将选中的考生撤销审核吗?', {icon: 3, title:'提示'}, function(index){
				checkOper($chkSerialize,projectId);
				layer.close(index);
			});
		}
		
		var sloadindex;
		function checkOper(chks,projectId){
			var serializeVal=chks+"&projectId="+projectId+"&status=3&reason=";
			$.ajax({
    			url : '${link.contextPath}/dg/planApply/checkCancel',
    			type : 'post',
    			data:serializeVal,
    			async: false,
    			cache : false,
    			dataType : 'json',
				beforeSend: function(){
                    sloadindex = layer.load(0, {
                    	shade: [0.3,'#fff']
                    });
                },
    			success : function(data) {
    				if(data.flag == 'success'){
    					alert(data.msg);
    					window.location.href="${link.contextPath}/dg/planApply/auditInterviewPass";
    				}else{
        				layer.close(sloadindex);
						layer.msg(data.msg, {icon: 2});
    				}
				}
    		});
		}
		
		function operBtn(){
			var projectId=$("#projectId").val();
			$.ajax({
    			url : '${link.contextPath}/dg/planApply/getProject',
    			type : 'post',
    			data: {"projectId":projectId},
    			async: false,
    			cache : false,
    			dataType : 'json',
    			success : function(data) {
					if(data.step < 2){
						$("#checkCancel_li").show();
        			}else{
						$("#checkCancel_li").hide();
					}
				}
    		});
		}
		
		function clearData(){
			$("#conditionName").val("");
		}
		
		function searchFunc(){
			$("#currentPage").val("1");
			$("#conditionNameHidden").val($("#conditionName").val());
			queryData();
		}
		
		function viewProgress(id,projectId){
			layer.open({
            	type: 2,
            	title:['考生步骤走向(若箭头中断表示该考生步骤结束)', 'font-weight:600'],
				content:['${link.contextPath}/dg/planApply/viewProgress?studentId='+id+"&projectId="+projectId,'no'],
				btn:['取消'],
            	shadeClose:false,
            	fix:true,
            	area: ['780px','240px'],
            	move: false,
            	yes: function(index, layero){
            		layer.close(index);
				}
            });
		}
    </script>
</head>
<body>
     #parse("/common/topMenu.vm")
     #parse("/common/leftTemplate.vm")
    <!-- Main内容模块 S-->
    <div class="content-wrapper">
        <!-- context内容 S-->
        <div class="content">
			<!-- table切换 S-->
            <div class="tabChange">
                <ul class="clearfix">
                    <li><a href="${link.contextPath}/dg/planApply/auditInterview" title="未审核">未审核</a></li>
                    <li class="active"><a href="${link.contextPath}/dg/planApply/auditInterviewPass" title="已审核">已审核</a></li>
                </ul>
            </div>
            <!-- table切换 E-->
            <!-- 条件搜索 S-->
            <form class="form-inline" id="list_form">
				<input type="hidden" id="currentPage" name="currentPage" value="1"/>
				<input type="hidden" id="pageSize" name="pageSize" value="20"/>
				<input type="hidden" id="totalCounts" name="totalCounts" value="1"/>
				<div class="clearfix item-group">
                    <ul class="clearfix pull-left">
                        <li>
                            <span>年份：</span>
                            <select class="select" id="year" name="condition['year']" onchange="initThemeData();queryData();">
                                #if($!years.size()>0)
    								#foreach($!list in $!years)
        								<option value="$!list">$!list</option>
									#end
								#else
									<option value="">--请选择--</option>
								#end
                            </select>
                        </li>
                        <li>
                            <span>招聘项目：</span>
                            <select class="select" id="projectId" name="condition['projectId']" onchange="queryData();"></select>
                        </li>
						<li>
                            <span>状态：</span>
							<select class="select" name="condition['applyStatus']" onchange="queryData();">
                                <option value="">全部</option>
								<option value="yes">通过</option>
								<option value="no">不通过</option>
                            </select>
                        </li>
						<li>
                            <input class="input" placeholder="请输入考生姓名" id="conditionName" type="text">
							<input type="hidden" name="condition['name']" id="conditionNameHidden"/>
                        </li>
                    	<li>
							<a onclick="searchFunc();" class="btn btn-primary btn-sm" href="javascript:void(0);" title="查找">查找</a>
                    	</li>
						<li>
							<a onclick="clearData();" class="btn btn-default btn-sm" href="javascript:void(0);" title="清空">清空</a>
						</li>
                    </ul>
					<ul class="clearfix pull-right">
						<li id="checkCancel_li" style="display:none;">
							<a onclick="checkCancel();" class="pull-right btn btn-info btn-sm" href="javascript:void(0);" title="撤销审核">撤销审核</a>
						</li>
						<li>
                    		<a onclick="reason();" class="pull-right btn btn-primary btn-sm" href="javascript:void(0);" title="原因维护">原因维护</a>
						</li>
                    </ul>
                </div>
            </form>
            <!-- 条件搜索 E-->
    		<!-- table表单模块 S-->
            <div class="table-content">
                <table class="table">
                    <thead>
                        <tr>
                            <th><label><input type="checkbox" id="checkAll"/></label></th>
    						<th>姓名</th>
							<th>招聘进度</th>
                            <th>性别</th>
                            <th>身份证号</th>
                            <th>申请岗位</th>
							<th>状态</th>
							<th>操作</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <!-- table表单模块 E-->
            <!-- 分页+全选模块 S-->
            <div class="clearfix pagesBox">
                <div class="pull-left"><span class="red">（注意：教育局面试名单发布后不可进行审核操作！)</span></div>
				<div id="pagination" class="pull-right pages"></div>
            </div>
            <!-- 分页+全选模块 E-->
        </div>
        <!-- context内容 E-->
        #parse("/common/foot.vm")
    </div>
    <!-- Main内容模块 E-->
</body>
</html>